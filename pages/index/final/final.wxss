/* pages/order/detail/detail.wxss */
page{
  background:#e9fadd;
}
.card-time{
  width:100rpx;
  height:100rpx;
  position:absolute;
  top:3rpx;
  right:9px;
}
.card-fetch{
  width:40px;
  background:#FFA35F;
  height:100px;
  font-size:14px;
  color:white;
}
.card-box{
  display:flex;
  width:88%;
  height:100px;
  background:#FEF9F4;
  margin-left:37rpx;
  background-image:-webkit-gradient(linear,50% 0,0 100%,from(transparent), color-stop(.5,transparent),color-stop(.5,#e5e5e5),to(#e5e5e5)), -webkit-gradient(linear,50% 0,100% 100%,from(transparent), color-stop(.5,transparent),color-stop(.5,#e5e5e5),to(#e5e5e5));
background-size:27px 15px;
background-repeat:repeat-x;
background-position:0 100%;

}
.card-left-bar{
  width:14px;
  padding:20px 14px;
}
.order-info{
  background: white;
  margin-top:10px;
}
.order-info-title{
  font-size:12px;
  color: #606470;
  padding: 12px;
  border-bottom: 1px #E3E3E3 solid
}

.order-sum{
  height:100rpx;
  padding:5px 15px;
  font-size:14px;
  line-height:100rpx;
}
.order-sum-number{
  font-size:19px;
  float:right;
}
.list-info{
  width:67%;
  padding:5px 15px;
  height:100rpx;
  line-height:100rpx;
}
.list-info-size{
  font-size:12px;
  color:#B1B1B1;
}
.cart-list-num{
  color:#ff7100;
  width:82rpx;
  line-height:100rpx;
  height:100rpx;
}
.activity-color{
  color:#FF9C35;
}
.cart-list-box{
  background:#FFFFFF;
  display:flex;
  font-size:15px;
  border-bottom:1px #E3E3E3 solid;
}
.note-exchange{
  padding:3px 5px;
  border:1px solid #FF9C35;
  color:#FF9C35;
  font-size:16px
}
.order-info-number{
  color:#be3030;
  margin-left:30rpx;
  margin-top:16rpx;
}
.order-info-li{
  color:black;
  margin-left:10px;
}

.note-card{
  margin-left:20px;
  color:#A2A1A0;
  font-size:12px;
  margin-top:15px
}
.statu-card{
  font-size:12px;
  color:gray;
}
.number-card{
  font-size:28px;
  padding:0px 20px
}
.go-top-10{
  margin-top:10px;
  color:#FFA35F;
}